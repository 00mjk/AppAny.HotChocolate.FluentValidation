<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Nullable>enable</Nullable>
		<Version>0.1.1</Version>
		<LangVersion>9</LangVersion>
	</PropertyGroup>

	<PropertyGroup>
		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/appany/AppAny.HotChocolate.FluentValidation</RepositoryUrl>
		<PackageProjectUrl>https://github.com/appany/AppAny.HotChocolate.FluentValidation</PackageProjectUrl>
		<PackageIcon>content/logo.png</PackageIcon>
		<PackageLicenseFile>content/LICENSE</PackageLicenseFile>
		<Copyright>Copyright Â©2021 AppAny</Copyright>
		<Authors>sergeyshaykhullin</Authors>
		<Description>HotChocolate FluentValidation integration</Description>
		<PackageTags>.NET Core;ASP.NET Core;HotChocolate;FluentValidation</PackageTags>
	</PropertyGroup>

	<ItemGroup Label="Packages">
		<PackageReference Include="FluentValidation" Version="9.3.0" />
		<PackageReference Include="HotChocolate.Execution" Version="11.0.7" />
	</ItemGroup>

	<ItemGroup Label="Assets">
		<None Include="../assets/logo.png" Pack="true" Visible="false" />
		<None Include="../LICENSE" Pack="true" Visible="false" />
	</ItemGroup>

</Project>
